# Ollama Configuration
# For local development:
# OLLAMA_BASE_URL=http://localhost:11434
# For production (App Runner), use your Ollama server URL:
OLLAMA_BASE_URL=http://your-ollama-server:11434
OLLAMA_MODEL=gemma:2b

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=contact_extractions

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Logging
LOG_LEVEL=INFO

# Performance Settings
# Set to true for millisecond responses (less accurate, regex-based)
# Set to false for accurate LLM-based extraction (slower, 2-5 seconds)
ENABLE_FAST_MODE=false

# Cache similarity threshold (0.0-1.0, lower = more similar)
CACHE_SIMILARITY_THRESHOLD=0.1